<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ButtonsActivity"
    android:background="@drawable/abc_ab_bottom_solid_dark_holo">


    <ImageButton
        android:layout_width="144dip"
        android:layout_height="72dip"
        android:id="@+id/madafaka_button"
        android:background="@drawable/madafaka_white"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/nailedit_button"
        android:layout_alignStart="@+id/nailedit_button" />

    <ImageButton
        android:layout_width="144dip"
        android:layout_height="72dip"
        android:id="@+id/nailedit_button"
        android:background="@drawable/nailedit_white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="144dip"
        android:layout_height="72dip"
        android:id="@+id/booyah_button"
        android:background="@drawable/booyah_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
